(* This only works if the 'seek parameter is covariant. *)

type t =
  { message : (read_write, Iobuf.no_seek) Iobuf.t
  ; writable : (read_write, Iobuf.seek) Iobuf.t
  }

let t =
  let buf = Iobuf.create ~len:1 in
  { message = buf; writable = buf }
;;

